<div class="col-md-4 mx-auto">
  <div class="card m-10">
    <div class="card-header bg-black text-center">
      <h3 class="text-white">Nueva Transaccion</h3>
    </div>
    <div class="card-body text-right">
      <form action="/transaccion/new-transaccion" method="POST">
        <div class="mb-3">
          <label for="tipo">Tipo</label>
          <select required class="form-control" name="tipo">
            <option value="ingreso">Ingreso</option>
            <option value="egreso" selected>Egreso</option>
          </select>
        </div>
        <div class="mb-3">
          <label for="description"> Descripcion de la transaccion :</label>
          <select class="form-control" name="description">
            <option default value="comida">Comida</option>
            <option value="alquiler" selected>Alquiler</option>
            <option value="gasto" selected>Gasto</option>
            <option value="transporte" selected>Transporte</option>
            <option value="otro" selected>Otros</option>
            <option value="salario" selected>Salario</option>
          </select>
        </div>
        <div class="mb-3">
          <label for="monto">Monto en pesos</label>
          <input required type="number" name="monto" class="form-control" placeholder="2000"></input>
        </div>
        <button class="btn btn-primary w-100" type="submit">
          Guardar
        </button>

      </form>
    </div>
  </div>
</div>
<button class="btn btn-success"> <a class="dropdown-item" href="/transaccion">Volver</a></button>